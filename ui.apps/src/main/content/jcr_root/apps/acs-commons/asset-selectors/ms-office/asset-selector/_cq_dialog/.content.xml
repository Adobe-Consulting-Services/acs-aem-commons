<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" 
    xmlns:cq="http://www.day.com/jcr/cq/1.0" 
    xmlns:jcr="http://www.jcp.org/jcr/1.0" 
    xmlns:nt="http://www.jcp.org/jcr/nt/1.0" jcr:primaryType="nt:unstructured" jcr:title="Microsoft Office Asset Selector" sling:resourceType="cq/gui/components/authoring/dialog">
    <content jcr:primaryType="nt:unstructured" sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
        <items jcr:primaryType="nt:unstructured">
            <column jcr:primaryType="nt:unstructured" sling:resourceType="granite/ui/components/coral/foundation/container">
                <items jcr:primaryType="nt:unstructured">
                    <path jcr:primaryType="nt:unstructured" 
                            sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                            fieldLabel="Content path"
                            fieldDescription="Please select the root folder for assets."
                            filter="folder,nosystem"
                            multiple="{Boolean}false"
                            name="./path"
                            required="{Boolean}true"
                            rootPath="/content/dam"/>            
                </items>
            </column>
        </items>
    </content>
</jcr:root>
