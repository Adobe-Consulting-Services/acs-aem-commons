<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0"
          xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
          xmlns:granite="http://www.adobe.com/jcr/granite/1.0"
          jcr:primaryType="nt:unstructured"
          jcr:title="ACL Packager configuration"
          sling:resourceType="cq/gui/components/authoring/dialog"
          extraClientlibs="[]"
          helpPath="https://adobe-consulting-services.github.io/acs-aem-commons/features/packagers/acl-packager/index.html">
    <content
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <tabs
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/coral/foundation/tabs"
                    maxmized="{Boolean}true">
                <items jcr:primaryType="nt:unstructured">
                    <general
                            jcr:primaryType="nt:unstructured"
                            jcr:title="Configuration"
                            sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                            margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <column
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/container">
                                <items jcr:primaryType="nt:unstructured">

                                    <package-name
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                            fieldLabel="Package name"
                                            fieldDescription="Name of the package to created. [ Default: acls ]"
                                            value="acls"
                                            name="./packageName"/>

                                    <package-group-name
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                            fieldLabel="Package group name"
                                            fieldDescription="Package group to assign this package to. [ Default: ACLs ]"
                                            value="ACLs"
                                            name="./packageGroupName"/>

                                    <package-version
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                            fieldLabel="Package version"
                                            fieldDescription="Package version to assign this package. This value is ignored is Conflict Resolution is set to IncrementValue. [ Default: 1.0.0 ]"
                                            value="1.0.0"
                                            name="./packageVersion"/>

                                    <package-description
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/textarea"
                                            fieldLabel="Package description"
                                            fieldDescription="Package description. Enter the purpose and scope of this package for future reference."
                                            value="ACL Package initially defined by a ACS AEM Commons - ACL Packager configuration."
                                            name="./packageDescription"/>

                                    <replication-action-type
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                            fieldLabel="Package ACL handling"
                                            fieldDescription="Dictates how package's ACLs will be installed on target systems. [ Default: Overwrite ]"
                                            name="./packageACLHandling">
                                        <items jcr:primaryType="nt:unstructured">
                                            <overwrite
                                                    jcr:primaryType="nt:unstructured"
                                                    text="Overwrite"
                                                    value="Overwrite"
                                                    selected="true"/>
                                            <merge
                                                    jcr:primaryType="nt:unstructured"
                                                    text="Merge"
                                                    value="Merge"/>
                                            <mergePreserve
                                                    jcr:primaryType="nt:unstructured"
                                                    text="MergePreserve"
                                                    value="MergePreserve"/>
                                        </items>
                                    </replication-action-type>

                                    <conflict-resolution
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                            fieldLabel="Conflict resolution"
                                            fieldDescription="Determines how package creation will be handled in the event of an existing package of the same Package group, name and version. [ Default: IncrementVersion ]"
                                            name="./conflictResolution">
                                        <items jcr:primaryType="nt:unstructured">
                                            <replace
                                                    jcr:primaryType="nt:unstructured"
                                                    text="Replace"
                                                    value="Replace"/>
                                            <increment-version
                                                    jcr:primaryType="nt:unstructured"
                                                    text="Increment Version"
                                                    value="IncrementVersion"
                                                    selected="true"/>
                                            <none
                                                    jcr:primaryType="nt:unstructured"
                                                    text="None"
                                                    value="None"/>
                                        </items>
                                    </conflict-resolution>

                                    <principal-names
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                                            fieldLabel="Principal names"
                                            fieldDescription="Click the '+' to add a new principals (users or groups)"
                                            composite="{Boolean}false">
                                        <field
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="/libs/granite/ui/components/coral/foundation/authorizable/autocomplete"
                                                selector="selector"
                                                valueType="principalname"
                                                multiple="false"
                                                name="./principalNames"/>
                                    </principal-names>

                                    <include-path-patterns
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                                            fieldLabel="Include paths patterns"
                                            fieldDescription="Click the '+' to add a new include pattern. Only paths that match an include pattern will be included. Remove all entries for all paths."
                                            composite="{Boolean}false">

                                        <field
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                name="./includePatterns"/>
                                    </include-path-patterns>

                                    <include-principals
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                            text="Include ACL Packager"
                                            fieldDescription="Include this page as part of the package. [ Default: false ]"
                                            value="true"
                                            uncheckedValue="false"
                                            name="./includePrincipals"/>
                                </items>
                            </column>
                        </items>
                    </general>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>