<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0"
    jcr:primaryType="cq:Dialog"
    title="Twitter-feed"
    xtype="tabpanel">
    <items jcr:primaryType="cq:WidgetCollection">
        <twitter
            jcr:primaryType="cq:Widget"
            title="Twitter-feed">
            <items jcr:primaryType="cq:WidgetCollection">
                <userName
                    jcr:primaryType="cq:Widget"
                    fieldDescription="This user's timeline will be displayed."
                    fieldLabel="Twitter Username"
                    name="./username"
                    xtype="textfield"/>
                <filter
                    jcr:primaryType="cq:Widget"
                    fieldDescription="A list of words, Tweets containing any word from this list will be displayed. When left blank all Tweets are displayed."
                    fieldLabel="Tweets Filter Words"
                    name="./filterWords"
                    xtype="multifield"/>
                <limit
                    jcr:primaryType="cq:Widget"
                    boxMaxWidth="{Long}30"
                    fieldDescription="No of Tweets to be displayed."
                    fieldLabel="No of Tweets"
                    name="./noOfTweets"
                    xtype="numberfield"/>
                <replicate
                    jcr:primaryType="cq:Widget"
                    fieldDescription="When checked twitter feed gets replicated to publish instance/s."
                    fieldLabel="Replicate feed"
                    name="./replicate"
                    type="checkbox"
                    xtype="selection"/>
            </items>
        </twitter>
    </items>
</jcr:root>
